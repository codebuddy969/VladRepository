.container {
  height 65px
  background linear-gradient(-270deg, #154ec0, #d33f8d, #d33f8d, #154ec0)
  background-size 400% 400%
  background-position 50% 50%
  display flex
  align-items center
  margin-top 0
  z-index 1
  position relative
  @media (max-width: 767px) {
    justify-content space-around
    min-height 65px
    height auto
  }
  @media (max-width: 480px) {
    flex-wrap wrap
    padding 10px 0
  }
}

.title {
  width 140px
  text-align center
  color #ffffff
  @media(max-width: 767px) {
    width 80px
  }
  @media (max-width: 480px) {
    width 100%
  }
}

.select:not(:last-child) {
  margin-right 95px
  @media (max-width:767px) {
    margin-right 20px
    margin-left 20px
  }
  @media (max-width: 767px) {
    margin-left 5px
    margin-right 5px
  }
}

.select:first-child {
  @media (max-width: 480px) {
    margin-left 0
  }
}

.select {
  background-color transparent
  border 0
  color rgba(255, 255, 255, 0.7)
  appearance none
  background-image url('./arrow.png')
  background-repeat no-repeat
  background-position right 
  padding-right 25px
  height 50px
  transition all 0.1s
  cursor pointer
  &:hover,
  &:active,
  &:focus {
    color #ffffff
    outline none
  }
  option {
    color #222222
  }
  @media (max-width: 480px) {
    height 35px
    width auto
    padding-right 15px
  }
}

.animate {
  animation: BackgroundGradientTransition 4s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
}