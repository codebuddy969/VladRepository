.container {
  width 250px
  height 100vh
  display flex
  flex-direction: column
  justify-content space-between
  background-color #fff
  position fixed
  z-index 99
}

.logo {
  margin-top 75px
  align-self flex-start
  margin-left 50px
  margin-bottom 20px
}

.list {
  margin: 0 0 0 50px
  padding: 0
  list-style: none
  a {
    color #222222
    font-size 16px
    text-decoration none
    font-weight 500
    transition all 0.1s
    &:focus,
    &:active{
      color #222222
    }
    &:hover {
      color #e83693
    }
  }
  li {
    margin-bottom 25px
  }
}

.listItemActive {
  color #e83693 !important
}

.social {
  list-style none
  margin 0
  padding 0
  min-height 30px
  display flex
  justify-content center
  margin-bottom 60px
  a {
    transition all 0.1s
    margin 0 5px
    color #c8c8c8
    font-size 28px
    &:active,
    &:focus,
    &:hover {
      color #e83693
    }
  }
}



 