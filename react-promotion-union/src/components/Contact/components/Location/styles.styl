.list {
  padding 0
  margin-top 0
  margin-left auto
  margin-right auto
  max-width 260px
  text-align left
  list-style none
  padding-left 80px
  @media (max-width: 1400px) {
    padding-left 60px
  }
  @media (max-width: 991px) {
    width 620px
    max-width 100%
    padding-left 0
  }
  @media (max-width: 767px) {
    text-align center
    width 100%
  }
  @media (max-width: 480px) {
    padding-left 5px
    padding-right 5px
    width auto
  }
}

.title {
  padding-top 55px
  color #ffffff
  font-size 20px
  font-weight 700
  text-transform uppercase
  padding-bottom 20px
  @media (max-height: 800px) {
    padding-top 15px
  }
  @media (max-width: 767px) {
    padding-top 15px
  }
}

.item,
.item a {
  color #ffffff
  font-size 16px
  line-height 24px
}

.item a {
  text-decoration none
  transition all 0.1s
  &:hover,
  &:active,
  &:focus {
    color #222222
  }
}