.section {
  height 100vh
  background-image url('./img/background.png')
  background-position center center
  background-size cover
  display flex
  justify-content center
  align-items center
  @media (max-width: 1610px) {
    padding 0 20px
  }
  @media (max-width: 1200px) {
    height auto
    padding 20px
  }
  @media (max-height: 750px) {
    height auto
    padding 20px
  }
}

.container {
  background-color rgba(255, 255, 255, 0.9)
  width 80%
  @media (max-width: 1610px) {
    width 100%
  }
  @media (max-width:1200px) {
    max-width 750px
  }
}

.title {
  font-family 'Anton', sans-serif
  font-size 48px
  color #222222
  text-align center
  text-transform uppercase
  letter-spacing 2px
  margin 0
  padding-top 45px
  padding-bottom 35px
  @media (max-width: 480px) {
    padding-top 20px
    padding-bottom 0
  }
}

.items {
  display flex
  justify-content space-between
  padding-bottom 80px
  padding-left 70px
  padding-right 70px
  @media (max-width: 1610px) {
    padding-left 20px
    padding-right 20px
  }
  @media (max-width: 1400px) {
    flex-wrap wrap
  }
  @media (max-width: 480px) {
    flex-direction column
    justify-content center
    align-items center
    padding-bottom 0
  }
}

.item {
  width 235px
  display flex
  flex-direction column
  justify-content center
  align-items center
  @media (max-width: 1400px) {
    width 40%
    padding 20px 0
  }
}

.itemImg {
  height 125px
  display flex
  align-items center
}

.itemText {
  text-align center
  color #222222
  padding-top 10px
}

.arrow {
  display flex
  align-items center
  padding-bottom 20px
  @media (max-width: 1400px) {
    width 10%
    &:nth-child(4) {
      display none
    }
  }
  @media (max-width: 480px) {
    transform rotateZ(90deg)
    padding-bottom 0
    &:nth-child(4) {
      display block
    }
  }
}

