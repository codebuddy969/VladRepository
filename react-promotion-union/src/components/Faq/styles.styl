.section {
  background #fafafa
  height 100vh
  padding-top 20px
  padding-bottom 100px
  @media (max-height: 900px) {
    padding-top 10px
    padding-bottom 10px
  }
  @media (max-height: 750px) {
    height auto
    padding-bottom 40px
  }
  @media (max-width: 1200px) {
    height auto
    padding-bottom 40px
  }
  @media (max-width: 480px) {
    padding-top 0
  }
}

.container {
  width 1410px
  margin 0 auto
  @media (max-width: 1650px) {
    width auto
  }
}

.title {
  color #222222
  font-size 48px
  text-transform uppercase
  font-family 'Anton', sans-serif
  letter-spacing 2px
  padding-left 20px
  @media (max-height: 900px) {
    margin 0
  }
  @media (max-width: 767px) {
    text-align center
    padding-left 0
  }
  @media (max-width: 480px) {
    margin 0
  }
}

.answers {
  display flex
  flex-wrap wrap
  justify-content flex-start
  flex-direction column
  align-items center
  height 700px
  @media (max-height: 750px) {
    height auto
    flex-direction row
    justify-content space-around
  }
  @media (max-width: 991px) {
    height auto
    flex-direction row
    justify-content space-around
  }
}