.section {
  height 100vh;
  background-color orange
  display flex
  flex-direction column
  background: linear-gradient(-270deg, #154ec0, #d33f8d);
  background-position 50% 50%
  @media (max-width: 1200px) {
    height auto
    padding 0 0 20px
  }
  @media (max-height: 750px) {
    height auto
    padding 0 0 20px
  }
}

.title {
  margin 0
  font-family 'Anton', sans-serif
  text-transform uppercase
  letter-spacing 3px
  font-size 60px
  padding-top 60px
  padding-left 130px
  color #ffffff
  @media (max-width: 1820px) {
    padding-top 10px
  }
  @media(max-width: 1500px) {
    padding-left 0
    text-align center
  }
  @media (max-width: 767px) {
    font-size 48px
  }
  @media (max-width: 600px) {
    font-size 35px
  }
  @media (max-width: 480px) {
    font-size 30px
    line-height 35px
    padding-left 5px
    padding-right 5px
  }
}

.subtitle {
  color #ffffff
  font-size 16px
  padding-left 130px
  padding-bottom 95px
  @media (max-height: 875px) {
    padding-bottom 30px
    padding-top 0
  }
  @media (max-width: 1500px) {
    padding-left 0
    text-align center
  }
  @media (max-width: 767px) {
    padding-bottom 30px
  }
}


.websitesTitle {
  color #ffffff
  font-size 87px
  font-family 'Damion', cursive
  padding-left 130px
  padding-top 70px
  padding-bottom 25px
  @media (max-width: 1820px) {
    padding-top 20px
  }
  @media(max-width: 1500px) {
    padding-left 0
    text-align center
  }
  @media(max-width: 1400px) {
    font-size 50px
  }
  @media (max-height: 875px) {
    padding-bottom 15px
    font-size 55px
  }
  @media (max-width: 767px) {
    font-size 40px
  }
  @media (max-width: 600px) {
    line-height 38px
  }
}
